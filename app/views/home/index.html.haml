%section.intro
  .container
    .row
      .col-xs-12
        %h3
          We already solved
          %strong= Support.done.count
          requests but there are still
          %strong= Support.not_done.count
          requests to solve.

    .row
      .col-lg-4.col-lg-offset-4
        = link_to 'I need help', topics_path, class: 'btn btn--lg btn--block'

%section.requests
  .container
    .row
      .col-lg-6.col-lg-offset-3
        .box.supports-list
          %ul.nav.nav-tabs
            %li.box__tab.active= link_to 'Pending requests', '#pending_requests', data: { toggle: 'tab' }
            %li.box__tab= link_to 'Recently helped', '#recently_helped', data: { toggle: 'tab' }
          .tab-content
            .tab-pane.active#pending_requests
              %ul.supports
                - waiting_for_help.each do |support|
                  = render support
            .tab-pane#recently_helped
              %ul.supports
                - recent_supports.each do |support|
                  = render support
